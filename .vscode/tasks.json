{
      // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Dependencies",
        "type": "shell",
        "command": "make get",
        "group": {
          "kind": "none",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Format",
        "type": "shell",
        "command": "fvm dart format --fix -l 120",
        "isBackground": true,
        "group": {
          "kind": "none",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "L10n generarion",
        "type": "shell",
        "command": "make gen-locale",
        "presentation": {
          "echo": false,
          "reveal": "never",
          "focus": false,
          "panel": "dedicated",
          "showReuseMessage": false,
          "clear": true,
        },
        "isBackground": true,
        "group": {
          "kind": "none",
          "isDefault": true
        }
      },
      {
        "label": "Codegeneration",
        "type": "shell",
        "dependsOn": [
          "Dependencies"
        ],
        "command": "make regen",
        "group": {
          "kind": "none",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "Clear project",
        "type": "shell",
        "command": "make clean",
        "problemMatcher": [],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }